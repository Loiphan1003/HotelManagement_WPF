<Window x:Class="GUI.View.DatPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="DatPhong" Height="500" Width="800"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="White"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        AllowsTransparency="True" 
        WindowStartupLocation="CenterScreen">
    <!--Bo góc-->
    <Window.Clip>
        <RectangleGeometry Rect="0,0,800,500" RadiusX="10" RadiusY="10">
        </RectangleGeometry>
    </Window.Clip>

    <Border BorderThickness="2" BorderBrush="#2C2A2A" CornerRadius="10">

        <Grid>
            <TextBlock FontSize="30" FontWeight="Bold" Text="Đặt Phòng" Margin="0 12 0 0"
                   Foreground="#00A3FF" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Grid Width="720" Height="420" Background="#F2F1F1" Margin="0 0 0 21"
              VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Grid.Clip>
                    <RectangleGeometry Rect="0,0,720,420" RadiusX="10" RadiusY="10"/>
                </Grid.Clip>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="2"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock FontSize="30" FontWeight="Bold" Text="Thông tin khách hàng" Margin="0 38 0 0"
                   Foreground="#00A3FF" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    <Grid Height="25" Width="213" VerticalAlignment="Top" HorizontalAlignment="Left"
                      Margin="65 120 0 0">
                        <materialDesign:PackIcon Kind="AccountBox" Height="25" Width="25"/>
                        <TextBox Margin="30 0 0 0"
                          materialDesign:HintAssist.Hint="Nhập họ tên khách hàng">
                        </TextBox>
                    </Grid>
                    <Grid Height="25" Width="213" VerticalAlignment="Top" HorizontalAlignment="Left"
                      Margin="65 180 0 0">
                        <materialDesign:PackIcon Kind="CardAccountDetailsOutline" Height="25" Width="25"/>
                        <TextBox Margin="30 0 0 0"
                          materialDesign:HintAssist.Hint="Nhập CCCD">
                        </TextBox>
                    </Grid>
                    <Grid Height="25" Width="213" VerticalAlignment="Top" HorizontalAlignment="Left"
                      Margin="65 240 0 0">
                        <materialDesign:PackIcon Kind="Phone" Height="25" Width="25"/>
                        <TextBox Margin="30 0 0 0"
                          materialDesign:HintAssist.Hint="Nhập SDT">
                        </TextBox>
                    </Grid>
                    <Grid Height="25" Width="213" VerticalAlignment="Top" HorizontalAlignment="Left"
                      Margin="65 300 0 0">
                        <materialDesign:PackIcon Kind="MapMarkerRadiusOutline" Height="25" Width="25"/>
                        <TextBox Margin="30 0 0 0"
                          materialDesign:HintAssist.Hint="Nhập địa chỉ">
                        </TextBox>
                    </Grid>
                </Grid>

                <Grid  Grid.Column="1">
                    <Grid Height="300" Background="Black" Opacity="0.5"></Grid>
                </Grid>

                <Grid Grid.Column="2">
                    <TextBlock FontSize="30" FontWeight="Bold" Text="Thông tin phòng" Margin="0 38 0 0"
                   Foreground="#00A3FF" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    <Button Width="128" Height="37" Background="#478C10" Content="Thêm phòng"
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 108 42 0" Click="click_ThemPhong">
                        <Button.Clip>
                            <RectangleGeometry Rect="0,0,128,37" RadiusX="10" RadiusY="10"/>
                        </Button.Clip>
                    </Button>
                    <Grid Background="#FFFCFC" Height="158" Width="268" Margin="0 163 52 0"
                      HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,268,158" RadiusX="10" RadiusY="10"/>
                        </Grid.Clip>
                        <ListView>
                            <!--Căn giữa-->
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.Resources>
                                <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">10</sys:Double>

                            </ListView.Resources>
                            <ListView.View>
                                <GridView>
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="Background" Value="#C4C4C4" />
                                            <Setter Property="Foreground" Value="Black" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>
                                    <GridViewColumn  Header="STT"  Width="70" DisplayMemberBinding="{Binding soPT}" />
                                    <GridViewColumn Header="Số phòng" Width="198" DisplayMemberBinding="{Binding soPhong}"  />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <Button Width="89" Height="36" Background="#478C10" Content="Lưu"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 212 11" Click="click_Luu">
                        <Button.Clip>
                            <RectangleGeometry Rect="0,0,89,36" RadiusX="10" RadiusY="10"/>
                        </Button.Clip>
                    </Button>
                    <Button Width="89" Height="36" Background="#9D9999" Content="Hủy"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 80 12"  Click="click_Huy">
                        <Button.Clip>
                            <RectangleGeometry Rect="0,0,89,36" RadiusX="10" RadiusY="10"/>
                        </Button.Clip>
                    </Button>
                </Grid>

            </Grid>

        </Grid>
    </Border>
</Window>
